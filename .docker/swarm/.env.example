# Environment variables for ZRocket Docker Swarm deployment
# Copy this file to .env and fill in the actual values

# MongoDB Atlas configuration
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/zrocket?retryWrites=true&w=majority

# PostgreSQL configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# JWT Secret for API authentication
JWT_SECRET=your_secure_jwt_secret_here_at_least_32_characters

# Portainer webhook configuration for auto-deployment
PORTAINER_WEBHOOK_URL=https://your-portainer-instance.com/api/webhooks/your-webhook-id
PORTAINER_WEBHOOK_TOKEN=your_portainer_webhook_token

# Domain configuration
DOMAIN_NAME=zrocket.app
API_DOMAIN=api.zrocket.app
ZERO_DOMAIN=zero.zrocket.app

# Traefik Let's Encrypt email
LETSENCRYPT_EMAIL=admin@zrocket.app