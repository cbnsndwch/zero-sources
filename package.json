{
    "name": "@cbnsndwch/zero-sources",
    "version": "0.0.1",
    "description": "A collection of utilities and custom change sources for @rocicorp/zero",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:libs": "turbo build \"--filter=./libs/*\"",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,mts,cts,md}\""
    },
    "devDependencies": {
        "@types/reservoir": "^0.1.6",
        "mongodb-schema": "^12.2.0",
        "npm-check-updates": "^17.1.14",
        "prettier": "^3.4.2",
        "reservoir": "^0.1.2",
        "turbo": "^2.3.4",
        "typescript": "5.7.3"
    },
    "engines": {
        "node": ">=22.12"
    },
    "packageManager": "yarn@4.6.0",
    "workspaces": [
        "apps/*",
        "libs/*"
    ]
}
