{
    "name": "@cbnsndwch/zero-sources",
    "version": "0.8.0",
    "description": "A collection of utilities and custom change sources for @rocicorp/zero",
    "private": true,
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "turbo run build",
        "build:libs": "pnpm i && turbo run build \"--filter=./libs/*\"",
        "build:api-docs": "turbo run build:api-docs \"--filter=./libs/*\"",
        "reset": "rm -rf ./.data/zrocket_data/*",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx,mts,cts,md}\"",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "pnpm build:libs && changeset publish",
        "changeset:status": "changeset status --verbose"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.2",
        "@changesets/cli": "^2.29.8",
        "@microsoft/api-documenter": "^7.28.2",
        "@microsoft/api-extractor": "^7.55.2",
        "npm-check-updates": "^19.2.0",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "turbo": "^2.5.8",
        "typescript": "5.9.3",
        "vitest": "^4.0.16",
        "postcss": "^8.5.6"
    },
    "engines": {
        "node": ">=22.12"
    },
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "packageManager": "pnpm@10.26.2"
}
