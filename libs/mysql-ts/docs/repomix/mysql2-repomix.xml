function procedurise(sql) {
  return [
    'DROP PROCEDURE IF EXISTS _as_sp_call;',
    'CREATE PROCEDURE _as_sp_call()',
    'BEGIN',
    `${sql};`,
    'END',
  ].join('\n');
}

