{
    "name": "@cbnsndwch/zero-source-mongodb",
    "description": "Generate Zero schemas from @nestjs/mongoose schemas",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "clean": "rimraf lib",
        "prebuild": "yarn clean",
        "build": "nest build",
        "dev": "nest build --watch",
        "release": "yarn test && yarn build && changelogen --release --push && yarn npm publish",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*"
    },
    "peerDependencies": {
        "@nestjs/common": "^11",
        "@nestjs/config": "^4",
        "@nestjs/core": "^11",
        "@nestjs/mongoose": "^11",
        "@nestjs/platform-express": "^11",
        "@nestjs/platform-ws": "^11",
        "@nestjs/websockets": "^11",
        "@rocicorp/zero": "*",
        "change-case": "^4.1.2",
        "mongoose": "^8.9.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@nestjs/cli": "^10.4.7",
        "@nestjs/common": "^11.0.6",
        "@nestjs/config": "^4.0.0",
        "@nestjs/core": "^11.0.6",
        "@nestjs/mongoose": "^11.0.1",
        "@nestjs/platform-express": "^11.0.6",
        "@nestjs/platform-ws": "^11.0.6",
        "@nestjs/schematics": "^10.2.3",
        "@nestjs/testing": "^10.4.7",
        "@nestjs/websockets": "^11.0.6",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "^0.15.2025021200",
        "@types/node": "^22.12.0",
        "@vitest/coverage-v8": "^3.0.4",
        "@vitest/ui": "^3.0.4",
        "change-case": "^5.4.4",
        "changelogen": "^0.5.7",
        "eslint": "^9.19.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "mongoose": "^8.9.5",
        "tsup": "^8.3.6",
        "typescript": "^5.7.3",
        "vitest": "^3.0.4"
    },
    "files": [
        "dist"
    ],
    "typings": ".dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs"
        }
    },
    "lint-staged": {
        "src/**/*.ts": "yarn lint"
    }
}
