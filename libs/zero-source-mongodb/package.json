{
    "name": "@cbnsndwch/zero-source-mongodb",
    "description": "Production-ready MongoDB change source for Rocicorp Zero with NestJS integration. Features MongoDB change streams, discriminated union support, WebSocket streaming, dynamic schema loading, and comprehensive metadata APIs for real-time data synchronization.",
    "version": "0.8.0",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "clean": "rimraf lib",
        "prebuild": "pnpm clean",
        "build": "nest build && tsc --emitDeclarationOnly",
        "build:api-docs": "api-extractor run --local --verbose && api-documenter markdown --input-folder ./temp --output-folder ../../apps/docs/content/api/zero-source-mongodb",
        "dev": "nest build --watch",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*"
    },
    "peerDependencies": {
        "@nestjs/common": "^11",
        "@nestjs/config": "^4",
        "@nestjs/core": "^11",
        "@nestjs/mongoose": "^11",
        "@nestjs/platform-express": "^11",
        "@nestjs/platform-ws": "^11",
        "@nestjs/swagger": "^11",
        "@nestjs/websockets": "^11",
        "@rocicorp/zero": "0.24.3000000000",
        "change-case": "^5.4.4",
        "express": "^5.1.0",
        "mongodb": "^6.16.0 || ^7.0.0",
        "mongoose": "^8.9.5 || ^9.0.2",
        "rxjs": "^7.8.2",
        "ws": "^8.18.1",
        "zod": "^3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@nestjs/cli": "^11.0.14",
        "@nestjs/common": "^11.1.10",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.10",
        "@nestjs/mongoose": "^11.0.4",
        "@nestjs/platform-express": "^11.1.10",
        "@nestjs/platform-ws": "^11.1.10",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/swagger": "^11.2.3",
        "@nestjs/testing": "^11.1.10",
        "@nestjs/websockets": "^11.1.10",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.24.3000000000",
        "@types/express": "^5.0.6",
        "@types/node": "^22.14.1",
        "@types/ws": "^8.18.1",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "change-case": "^5.4.4",
        "eslint": "^9.39.2",
        "express": "^5.2.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "mongoose": "^9.0.2",
        "postcss": "^8.5.6",
        "typescript": "~5.9.3",
        "vitest": "^4.0.16",
        "ws": "^8.18.3",
        "zod": "^4.2.1"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "lint-staged": {
        "src/**/*.ts": "pnpm lint"
    }
}
