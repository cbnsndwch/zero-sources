{
    "name": "@cbnsndwch/zchat-contracts",
    "description": "Contracts and Zero schema for ZChat",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "release": "pnpm test && pnpm build && changelogen --release --push && pnpm npm publish",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@rocicorp/zero": "*"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@rocket.chat/ui-kit": "^0.37.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.20.2025051600",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/ui": "^3.1.2",
        "changelogen": "^0.6.1",
        "eslint": "^9.25.1",
        "husky": "^9.1.7",
        "lexical": "^0.30.0",
        "lint-staged": "^15.5.1",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3",
        "vitest": "^3.1.2"
    },
    "files": [
        "dist"
    ],
    "typings": ".dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
