{
    "name": "@cbnsndwch/zchat-contracts",
    "description": "Contracts and Zero schema for ZChat",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "release": "yarn test && yarn build && changelogen --release --push && yarn npm publish",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@rocicorp/zero": "*"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "^0.14.2025021202",
        "@types/node": "^22.12.0",
        "@vitest/coverage-v8": "^3.0.4",
        "@vitest/ui": "^3.0.4",
        "changelogen": "^0.5.7",
        "eslint": "^9.19.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "tsup": "^8.3.6",
        "typescript": "^5.7.3",
        "vitest": "^3.0.4"
    },
    "files": [
        "dist"
    ],
    "typings": ".dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "yarn lint"
    }
}
