{
    "name": "@cbnsndwch/nest-zero-synced-queries",
    "version": "0.5.0",
    "description": "NestJS library for declarative Zero synced query handlers with decorator-based configuration",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "keywords": [
        "nestjs",
        "zero",
        "synced-queries",
        "decorators",
        "authentication",
        "guards"
    ],
    "scripts": {
        "build": "nest build && tsc --emitDeclarationOnly",
        "build:api-docs": "api-extractor run --local --verbose && api-documenter markdown --input-folder ./temp --output-folder ../../apps/docs/content/api/synced-queries",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@rocicorp/zero": "0.24.3000000000"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.0.0",
        "@nestjs/core": "^11.0.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.0",
        "zod": "^3"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.14",
        "@nestjs/common": "^11.1.9",
        "@nestjs/core": "^11.1.9",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.15.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "typescript": "^5.9.3",
        "zod": "^3.25.76"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    }
}
