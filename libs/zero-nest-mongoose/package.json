{
    "name": "@cbnsndwch/zero-nest-mongoose",
    "description": "Generate Zero schemas from @nestjs/mongoose schemas",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "build:2": "tsup && tsc --emitDeclarationOnly",
        "release": "yarn test && yarn build && changelogen --release --push && yarn npm publish",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@nestjs/mongoose": "^10.1.0",
        "@rocicorp/zero": "^0.11.2025011402",
        "change-case": "^4.1.2",
        "mongoose": "^8.9.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@nestjs/mongoose": "^10.1.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "^0.11.2025011402",
        "@types/node": "^22.10.5",
        "@vitest/coverage-v8": "^3.0.4",
        "@vitest/ui": "^3.0.4",
        "change-case": "^4.1.2",
        "changelogen": "^0.5.7",
        "eslint": "^9.18.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "mongoose": "^8.9.5",
        "tsup": "^8.3.5",
        "typescript": "^5.7.3",
        "vitest": "^3.0.4"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "main": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "yarn lint"
    }
}
