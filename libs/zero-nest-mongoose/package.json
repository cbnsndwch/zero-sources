{
    "name": "@cbnsndwch/zero-nest-mongoose",
    "description": "Generate Zero schemas from @nestjs/mongoose schemas",
    "version": "0.0.1",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "build:2": "tsup && tsc --emitDeclarationOnly",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@nestjs/common": "^11",
        "@nestjs/mongoose": "^11",
        "@rocicorp/zero": "*",
        "change-case": "^4.1.2",
        "mongoose": "^8.9.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@nestjs/common": "^11.1.3",
        "@nestjs/mongoose": "^11.0.3",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.22.2025072600",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "change-case": "^5.4.4",
        "eslint": "^9.31.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "mongoose": "^8.16.3",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "files": [
        "dist"
    ],
    "typings": ".dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
