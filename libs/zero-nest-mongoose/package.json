{
    "name": "@cbnsndwch/zero-nest-mongoose",
    "description": "Automatic Zero schema generation from NestJS Mongoose schemas with full TypeScript support. Seamlessly convert your existing Mongoose models into Rocicorp Zero schemas with type-safe table definitions, relationships, and virtual tables.",
    "version": "0.6.0",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "build:api-docs": "api-extractor run --local --verbose && api-documenter markdown --input-folder ./temp --output-folder ../../apps/docs/content/api/zero-nest-mongoose",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@nestjs/common": "^11",
        "@nestjs/mongoose": "^11",
        "@rocicorp/zero": "0.24.3000000000",
        "change-case": "^4.1.2",
        "mongoose": "^8.9.5 || ^9.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@nestjs/common": "^11.1.10",
        "@nestjs/mongoose": "^11.0.4",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.24.3000000000",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "change-case": "^5.4.4",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "mongoose": "^9.0.2",
        "tsup": "^8.5.1",
        "typescript": "~5.9.3",
        "vitest": "^4.0.16"
    },
    "files": [
        "dist"
    ],
    "typings": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
