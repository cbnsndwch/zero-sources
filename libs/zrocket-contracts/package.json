{
    "name": "@cbnsndwch/zrocket-contracts",
    "description": "Complete Zero schema, table mappings, and permissions for ZRocket - a Rocket.Chat-style application demonstrating discriminated union tables, room types (chats, groups, channels), and message types with full TypeScript support.",
    "version": "0.5.0",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "build:api-docs": "api-extractor run --local --verbose && api-documenter markdown --input-folder ./temp --output-folder ../../apps/docs/content/api/zrocket-contracts",
        "build:schema": "tsx scripts/export-config.ts",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*"
    },
    "peerDependencies": {
        "@rocicorp/zero": "0.24.2025101500",
        "zod": "^3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.24.2025101500",
        "@types/node": "^24.10.0",
        "@vitest/coverage-v8": "^4.0.6",
        "@vitest/ui": "^4.0.6",
        "eslint": "^9.39.0",
        "husky": "^9.1.7",
        "lexical": "^0.38.2",
        "lint-staged": "^16.2.6",
        "tsup": "^8.5.0",
        "tsx": "^4.20.6",
        "typescript": "~5.9.3",
        "vitest": "^4.0.6",
        "zod": "^3.25.76"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./schema": {
            "types": "./dist/schema/index.d.ts",
            "default": "./dist/schema/index.js"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
