{
    "name": "@cbnsndwch/zero-watermark-zqlite",
    "description": "Watermark KV service for custom Zero change sources backed by @rocicorp/zero-sqlite3",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*"
    },
    "peerDependencies": {
        "@nestjs/common": "^11",
        "@nestjs/config": "^4",
        "@rocicorp/zero-sqlite3": "*",
        "change-case": "^4.1.2",
        "mongoose": "^8.9.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@nestjs/common": "^11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/testing": "^11.1.6",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero-sqlite3": "*",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.37.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "tsup": "^8.5.0",
        "typescript": "~5.9.3",
        "vitest": "^3.2.4"
    },
    "files": [
        "dist"
    ],
    "typings": ".dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
