{
    "name": "@cbnsndwch/zero-contracts",
    "description": "Core TypeScript contracts, utilities, and protocols for building custom change sources with Rocicorp Zero. Includes upstream protocols, watermark interfaces, configuration types, and shared utilities for real-time data synchronization.",
    "version": "0.9.0",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "tsup",
        "build:api-docs": "api-extractor run --local --verbose && api-documenter markdown --input-folder ./temp --output-folder ../../apps/docs/content/api/zero-contracts",
        "lint": "eslint . --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "engines": {
        "node": ">=22"
    },
    "peerDependencies": {
        "@rocicorp/zero": "0.24.3000000000"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@nestjs/common": "^11.1.10",
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@rocicorp/zero": "0.24.3000000000",
        "@types/express": "^5.0.6",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "tsup": "^8.5.1",
        "typescript": "~5.9.3",
        "vitest": "^4.0.16"
    },
    "files": [
        "dist"
    ],
    "typings": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "lint-staged": {
        "*.ts": "pnpm lint"
    }
}
