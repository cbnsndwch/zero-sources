{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "ZRocket",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/zrocket",
            "env": {
                "PORT": "8011",
                "CONFIG_FILE": "${workspaceRoot}/.local/config/zrocket/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "Zero Cache for ZChat",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev:zero"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/zrocket"
        },
        {
            "type": "node",
            "name": "[NODE] Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "env": {
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "[TSX] Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "${file}"
            ],
            "env": {
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "Mongo Source - Standalone",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev",
                "--",
                "--dns-result-order=ipv4first",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/source-mongodb-server",
            "env": {
                "CONFIG_FILE": "${workspaceRoot}/.local/config/source-mongodb/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
    ]
}