{
    "version": "0.2.0",
    "configurations": [
        // ZRocket
        {
            "type": "node",
            "name": "ZRocket",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/zrocket",
            "envFile": "${workspaceRoot}/apps/zrocket/.env",
        },
        {
            "type": "node",
            "name": "Zero Cache for ZRocket",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev:zero"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/zrocket"
        },
        {
            "type": "node",
            "name": "Mongo Change Source",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev",
                "--",
                "--dns-result-order=ipv4first",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/source-mongodb-server",
            "envFile": "${workspaceRoot}/apps/source-mongodb-server/.env",
        },
        // Docs
        {
            "type": "node",
            "name": "Docs",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/docs"
        },
        // Generic
        {
            "type": "node",
            "name": "[NODE] Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "env": {
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "[TSX] Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "${file}"
            ],
            "env": {
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
    ]
}