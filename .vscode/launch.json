{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Mongo Source",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev",
                "--",
                "--dns-result-order=ipv4first",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceRoot}/apps/source-mongodb",
            "env": {
                "CONFIG_FILE": "${workspaceRoot}/apps/source-mongodb/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "Debug ZChat",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "sourceMaps": true,
            "runtimeArgs": [
                "dev",
                "--",
                "--dns-result-order=ipv4first",
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules",
                "**/node_modules/@nestjs/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/apps/zchat",
            "env": {
                "PORT": "8011",
                "CONFIG_FILE": "${workspaceRoot}/apps/zchat/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "[JS] Debug Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "env": {
                "CONFIG_FILE": "${workspaceRoot}/apps/source-mongodb/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        },
        {
            "type": "node",
            "name": "[TSX] Debug Current File",
            "request": "launch",
            "cwd": "${fileDirname}",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "${file}"
            ],
            "env": {
                "CONFIG_FILE": "${workspaceRoot}/apps/source-mongodb/config.yml",
                "NODE_OPTIONS": "--dns-result-order=ipv4first"
            }
        }
    ]
}