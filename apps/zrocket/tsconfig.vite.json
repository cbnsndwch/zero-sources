{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2023"
        ],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "composite": true,
        "strict": true,
        "types": [
            "vite/client"
        ],
        "rootDirs": [
            ".",
            "./.react-router/types"
        ],
        "paths": {
            "@/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        ".react-router/types/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*"
    ]
}