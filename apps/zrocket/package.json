{
    "name": "@cbnsndwch/zrocket",
    "description": "ZRocket: A React Router 7 + NestJS chat application showcasing Zero discriminated union tables",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "nest build && react-router build",
        "build:api": "nest build", 
        "build:ui": "react-router build",
        "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:ui\"",
        "dev:api": "nest start --watch --exec \"node dist/server.js\"",
        "dev:ui": "react-router dev --port 3000",
        "dev:zero": "zero-cache-dev -p ../../libs/zchat-contracts/src/discriminated-schema.ts",
        "format": "prettier --write .",
        "start": "node dist/server.js",
        "types": "react-router typegen && tsc",
        "lint": "eslint \"{src,app}/**/*.ts\" --fix",
        "test": "vitest --run --passWithNoTests",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage"
    },
