{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "target": "es2023",
        "loose": true,
        "externalHelpers": false,
        "keepClassNames": true,
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        }
    },
    "module": {
        "type": "nodenext",
        "strict": true,
        "noInterop": false,
        "resolveFully": true,
        "outFileExtension": "js"
    },
    "sourceMaps": true,
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        ".git"
    ],
    "minify": false
}