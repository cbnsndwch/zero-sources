        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.6",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/platform-ws": "^11.1.6",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/websockets": "^11.1.6",
        "@rocicorp/zero": "0.23.2025090100",
        "change-case": "^5.4.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dotenv": "^17.2.3",
        "js-yaml": "^4.1.0",
        "lib": "^5.1.0",
        "mongoose": "^8.19.0",
