{
    "name": "@cbnsndwch/zero-source-mongodb-server",
    "description": "A Zero change source for MongoDB/Mongoose",
    "version": "0.3.2",
    "license": "MIT",
    "type": "module",
    "private": true,
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.mts\" \"test/**/*.ts\"",
        "start": "node dist/main",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*",
        "@cbnsndwch/zero-source-mongodb": "workspace:*",
        "@cbnsndwch/zero-watermark-zqlite": "workspace:*",
