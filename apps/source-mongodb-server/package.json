        "rxjs": "^7.8.2",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.8",
        "@nestjs/testing": "^11.1.6",
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.13.5",
        "@types/express": "^5.0.3",
        "@types/js-yaml": "^4",
        "@types/node": "^22.14.1",
        "@types/supertest": "^6.0.3",
        "@types/ws": "^8",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint": "^9.37.0",
