        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "~5.9.3",
        "vitest": "^3.2.4"
    },
    "optionalDependencies": {
        "@nats-io/kv": "^3.2.0",
        "@nats-io/transport-node": "^3.2.0"
    },
    "exports": {
        "./main": "./dist/main.js"
    }
