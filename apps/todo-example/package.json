{
    "name": "@cbnsndwch/todo-example",
    "description": "A simple todo app demonstrating MongoDB change source integration with Zero",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "license": "MIT",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.mts\" \"test/**/*.ts\"",
        "start": "node dist/main",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "seed": "node scripts/seed.js"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*",
        "@cbnsndwch/zero-source-mongodb": "workspace:*",
        "@cbnsndwch/zero-watermark-zqlite": "workspace:*",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/platform-express": "^11.1.3",
        "@nestjs/platform-ws": "^11.1.3",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/websockets": "^11.1.3",
        "@rocicorp/zero": "0.21.2025070200",
        "change-case": "^5.4.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "mongoose": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@types/express": "^5.0.3",
        "@types/node": "^22.14.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.31.0",
        "express": "^5.1.0",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=22"
    }
}
