{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "rootDirs": [
            ".",
            "./.react-router/types"
        ],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "**/*",
        "**/.server/**/*",
        "**/.client/**/*",
        ".react-router/types/**/*"
    ]
}