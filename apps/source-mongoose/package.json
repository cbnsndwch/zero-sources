{
    "name": "@cbnsndwch/zero-source-mongoose",
    "description": "A Zero change source for MongoDB/Mongoose",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "type": "module",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.mts\" \"test/**/*.ts\"",
        "start": "node dist/main",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@cbnsndwch/zero-nest-mongoose": "workspace:*",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/mongoose": "^10.1.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/platform-ws": "^10.4.15",
        "@nestjs/websockets": "^10.4.15",
        "@rocicorp/zero": "^0.11.2025011402",
        "change-case": "^4.1.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "js-yaml": "^4.1.0",
        "lib": "^5.1.0",
        "mongoose": "^8.9.3",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@swc/cli": "^0.5.2",
        "@swc/core": "^1.10.4",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/js-yaml": "^4",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@types/ws": "^8",
        "@typescript-eslint/eslint-plugin": "^8.21.0",
        "@typescript-eslint/parser": "^8.21.0",
        "eslint": "^9.18.0",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.5.0",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "exports": {
        "./main": "./dist/main.js"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "packageManager": "yarn@4.6.0"
}
