{
    "name": "@cbnsndwch/zchat-api",
    "description": "A Zero-powered chat server inspired by RocketChat",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "type": "module",
    "author": {
        "name": "Sergio Leon",
        "email": "oss@cbnsndwch.io"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.mts\" \"test/**/*.ts\"",
        "start": "node dist/main",
        "dev": "nest start --watch",
        "dev:zero": "zero-cache-dev -p ../../libs/zchat-contracts/src/schema.ts",
        "debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "vitest --run --passWithNoTests",
        "ci:test": "vitest --run --passWithNoTests --bail 1",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true"
    },
    "dependencies": {
        "@cbnsndwch/zero-contracts": "workspace:*",
        "@cbnsndwch/zchat-contracts": "workspace:*",
        "@cbnsndwch/zero-source-mongodb": "workspace:*",
        "@cbnsndwch/zero-watermark-zqlite": "workspace:*",
        "@nestjs/common": "^11.1.0",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.0",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.0",
        "@nestjs/platform-ws": "^11.1.0",
        "@nestjs/swagger": "^11.1.5",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/websockets": "^11.1.0",
        "@rocicorp/zero": "0.20.2025052100",
        "@rocket.chat/icons": "^0.42.0",
        "@rocket.chat/message-parser": "^0.31.32",
        "@rocket.chat/ui-kit": "^0.37.0",
        "change-case": "^5.4.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "jose": "^6.0.10",
        "js-yaml": "^4.1.0",
        "lexical": "^0.30.0",
        "lib": "^5.1.0",
        "mongodb-schema": "^12.6.2",
        "mongoose": "^8.13.2",
        "passport": "^0.7.0",
        "passport-github2": "^0.1.12",
        "passport-jwt": "^4.0.1",
        "passport-oauth2": "^1.8.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.0",
        "@swc/cli": "^0.7.3",
        "@swc/core": "^1.11.24",
        "@tailwindcss/vite": "^4.1.4",
        "@types/express": "^5.0.1",
        "@types/js-yaml": "^4",
        "@types/node": "^22.14.1",
        "@types/passport": "^1",
        "@types/passport-github": "^1",
        "@types/passport-jwt": "^4",
        "@types/supertest": "^6.0.3",
        "@types/passport-oauth2": "^1.4.17",
        "@types/ws": "^8",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/ui": "^3.1.2",
        "eslint": "^9.25.1",
        "eslint-plugin-prettier": "^5.2.6",
        "prettier": "^3.5.3",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.0",
        "tailwindcss": "^4.1.4",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3",
        "vitest": "^3.1.2"
    },
    "optionalDependencies": {
        "@nats-io/kv": "^3.0.2",
        "@nats-io/transport-node": "^3.0.2"
    },
    "exports": {
        "./main": "./dist/main.js"
    }
}
