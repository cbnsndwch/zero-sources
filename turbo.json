{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "CONFIG_FILE",
        "CORS_ORIGIN",
        "NODE_ENV",
        "PORT"
    ],
    "ui": "stream",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "lib",
                "dist",
                "build"
            ]
        },
        "build:api-docs": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**/*.ts",
                "typedoc.json"
            ],
            "outputs": [
                "../../apps/docs/content/api/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}